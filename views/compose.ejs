<%- include("partials/header") -%>

<h1>Compose</h1>

<form class="" action="/compose" method="post">

  <div class="form-group">
    <label for="postTitle">Title</label>
    <input id="postTitle" class="form-control" type="text" name="postTitle" value="" placeholder="Enter Title" required>
  </div>

  <div class="form-group">
    <label for="postText">Post</label>
    <textarea name="postText" class="form-control" rows="8" cols="80" placeholder="Enter Post Here" required></textarea>
  </div>

  <button class="btn btn-lg btn-primary" type="submit" name="button">Publish</button>
</form>


<%- include("partials/footer") -%>
